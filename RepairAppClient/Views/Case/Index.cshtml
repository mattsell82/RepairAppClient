@model IEnumerable<RepairAppClient.CaseService.CaseDto>


@{
    ViewBag.Title = "Ärenden";
}

<h2>Ärenden</h2>


<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Skapat
        </th>
        <th>
            Kund
        </th>
        <th>
            Produkt
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @item.DateTime.ToString("yyy-MM-dd")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerDto.FirstName) @Html.DisplayFor(modelItem => item.CustomerDto.LastName)
            </td>
            <td>
                @ViewBag.Products[item.ProductId]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusDto.Name)
            </td>
            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
